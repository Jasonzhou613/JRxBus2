<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_main"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="16dp">


    <Button
        android:id="@+id/btnSendNormalEvent"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="sendNormalEvent"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnSendNormalEvent2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="sendNormalEvent code 2"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnSendStickEvent"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="sendStickEvent"
        android:textSize="16sp"/>


</LinearLayout>